<Page
    x:Class="ControlsExamplePart1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlsExamplePart1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="10,10,0,0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="CheckBox" VerticalAlignment="Center"/>
        <StackPanel Grid.Column="1"
                    Margin="20,10,0,10"
                    Orientation="Horizontal">
            <CheckBox x:ConnectionId='11' Name="MyCheckBox"
                      Content="Agree?"
                                                />
            <TextBlock x:ConnectionId='12' Name="CheckBoxResultTextBlock"/>
        </StackPanel>


        <TextBlock Grid.Row="2"
                   Text="RadioButton"
                   VerticalAlignment="Center"/>
        <StackPanel  Grid.Row="2"
                     Grid.Column="1"
                     Orientation="Horizontal"
                     Margin="20,10,0,10">
            <RadioButton x:ConnectionId='9' Name="YesRadioButton"
                         Content="Yes"
                         GroupName="MyGroup"
                                                      />
            <TextBlock x:ConnectionId='10' Name="RadioButtonTextBlock"/>
        </StackPanel>

        <TextBlock x:ConnectionId='2' Grid.Row="3" 
                   Text="ComboBox"
                   Name="MyComboBox"
                   VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="20,10,0,10">
            <ComboBox x:ConnectionId='7'                                             >
                <ComboBoxItem Content="Fourth"/>
                <ComboBoxItem Content="Fifth"/>
                <ComboBoxItem Content="Sixth" IsSelected="True"/>
                <TextBlock x:ConnectionId='8' Name="ComboBoxResultTextBlock"/>
            </ComboBox>
        </StackPanel>


        <TextBlock Grid.Row="4" Text="ListBox" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Margin="20,10,0,10">
            <ListBox x:ConnectionId='5' Name="MyListBox"
                     SelectionMode="Multiple"
                                                                >
                <ListBoxItem Content="First"/>
                <ListBoxItem Content="Second"/>
                <ListBoxItem Content="Third"/>
            </ListBox>
            <TextBlock x:ConnectionId='6' Name="ListBoxResultTextBlock"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Text="Image" VerticalAlignment="Center"/>
        <Image Source="Assets/anbu.jfif"
               HorizontalAlignment="Left"
               Width="250"
               Height="100"
               Grid.Row="5"
               Grid.Column="1"
               Stretch="UniformToFill"
               Margin="20,10,0,10"/>

        <TextBlock Grid.Row="6" Text="ToggleButton" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="20,10,0,10">
            <ToggleButton x:ConnectionId='3' Name="MyToggleButton"
                          Content="Permium Option"
                          IsThreeState="True"
                                                      />
            <TextBlock x:ConnectionId='4' Name="ToggleButtonResultTextBlock"/>
        </StackPanel>

        <TextBlock Grid.Row="7"
                   Text="ToggleSwitch"
                   VerticalAlignment="Center"/>
        <StackPanel Grid.Row="7"
                    Grid.Column="1"
                    Margin="20,10,0,10">
            <ToggleSwitch>
                <ToggleSwitch.OffContent>
                    <TextBlock Text="I'm off right now."/>
                </ToggleSwitch.OffContent>
                <ToggleSwitch.OnContent>
                    <TextBlock Text="I'm on!"/>
                </ToggleSwitch.OnContent>
            </ToggleSwitch>
        </StackPanel>

    </Grid>
</Page>

